networks:
  app-network:
    driver: bridge

services:
  db:
    image: postgres:13.10
    env_file: .env
    volumes:
      - pg_data:/var/lib/postgresql/data
    networks:
      - app-network

  backend:
    container_name: backend
    build: ./backend/
    env_file: .env
    volumes:
      - static:/backend_static
      - media:/app/media
      - ./backend/data:/app/data
    depends_on:
      - db
    networks:
      - app-network

  frontend:
    env_file: .env
    build: ./frontend/
    command: cp -r /app/build/. /frontend_static/
    volumes:
      - static:/frontend_static
    networks:
      - app-network

  gateway:
    container_name: gateway
    build: ./nginx/
    env_file: .env
    depends_on:
      - backend
      - frontend
    ports:
      - 7777:80
    volumes:
      - static:/static
      - media:/media
    networks:
      - app-network

volumes:
  pg_data:
  static:
  media:

